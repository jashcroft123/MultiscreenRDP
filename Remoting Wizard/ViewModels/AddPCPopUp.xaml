<Window x:Class="Remoting_Wizard.ViewModels.AddPCPopUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
			 mc:Ignorable="d" 
			 d:DesignHeight="45" d:DesignWidth="80"
             Height="300"
             Width="300">


    <StackPanel x:Name ="Main" HorizontalAlignment="Center" VerticalAlignment="Center">
        <UniformGrid Columns="2" Margin="10">
            <Label Content="Alias:" Width="100"/>
            <TextBox Text="{Binding ConfigPCs.Selected.Alias}"/>
            
            <Label Content="Name:"/>
            <TextBox Text="{Binding ConfigPCs.Selected.Name}"/>
            
            <Label Content="User ID:"/>
            <TextBox Text="{Binding ConfigPCs.Selected.UserID}"/>
        </UniformGrid>

        <Button Content="Save and Close" Command="{Binding SaveAndCloseCommand}"/>
    </StackPanel>
</Window>
