<prism:PrismApplication x:Class="Remoting_Wizard.App"
                        xmlns:local="clr-namespace:Remoting_Wizard"
                        xmlns:prism="http://prismlibrary.com/"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/JAStyles.xaml" />

                <ResourceDictionary>
                    <Style x:Key="JAWindow" BasedOn="{StaticResource BaseStyle}" TargetType="Window">
                        <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
                        <Setter Property="AllowsTransparency" Value="True" />
                        <Setter Property="WindowStyle" Value="None" />
                    </Style>
                </ResourceDictionary>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
